generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id      Int      @id @default(autoincrement())
  email   String   @unique
  name    String?
  reviews Review[] @relation("ProductReviews")
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  price       Int
  rate        Float
  colors      String[]
  sizes       String[]
  salePercent Int?
  reviews     Review[] @relation("ProductToReview")
  numInStock  Int
  imageUrl    String
  description String?
}

model Review {
  id Int @id @default(autoincrement())

  userId Int
  user   User @relation("ProductReviews", fields: [userId], references: [id], onDelete: Cascade)

  productId Int
  Product   Product @relation("ProductToReview", fields: [productId], references: [id], onDelete: Cascade)
}

model CartItem {
  id        Int    @id @default(autoincrement())
  productId Int
  name      String @unique
  size      String
  color     String
  price     Int
  quantity  Int
  imageUrl  String
}
